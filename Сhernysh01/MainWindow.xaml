<Window x:Class="Сhernysh01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Сhernysh01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <DatePicker x:Name="DOB_Calendar" HorizontalAlignment="Left" Margin="36,54,0,0" SelectedDateChanged="MonthlyCalendar_SelectedDatesChanged" VerticalAlignment="Top"/>
        <TextBlock  Name="tbSettingText" HorizontalAlignment="Left" Margin="0,244,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="30" Width="782"/>
        <TextBlock  Name="ChineseGoroscop" HorizontalAlignment="Left" Margin="0,209,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="30" Width="782"/>
        <TextBlock  Name="WesternGoroscop" HorizontalAlignment="Left" Margin="0,279,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="30" Width="782"/>
        <Label Content="Please, select your date of birth" HorizontalAlignment="Left" Margin="36,23,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.994,-0.11"/>
    </Grid>
</Window>
